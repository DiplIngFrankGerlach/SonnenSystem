int Main::main()
{
    var PrintfClass pfc;

    // -------------------------------
    // Konstanten
    // -------------------------------
    var Math m;
    var float G = 6.67430e-11;    // Gravitationskonstante
    var float dt = 60.0;           // Zeitschritt in Sekunden
    var int steps = 1000;          // Anzahl Zeitschritte

    // -------------------------------
    // Planetendaten
    // -------------------------------
    var float x = 1.5e11;          // Anfangsposition x (m)
    var float y = 0.0;             // Anfangsposition y (m)
    var float vx = 0.0;            // Anfangsgeschwindigkeit vx (m/s)
    var float vy = 30000.0;        // Anfangsgeschwindigkeit vy (m/s)
    var float massPlanet = 5.972e24;  // Masse Erde (kg)
    var float massSun = 1.989e30;     // Masse Sonne (kg)

    // -------------------------------
    // Simulationsschleife
    // -------------------------------
    for(var int i = 0; i < steps; i++)
    {
        // Abstand Erde-Sonne
        var float r = m.wurzel(x*x + y*y);

        // Gravitationskraft
        var float F = G * massPlanet * massSun / (r*r);

        // Beschleunigung
        var float ax = -F * x / (r * massPlanet);
        var float ay = -F * y / (r * massPlanet);

        // Geschwindigkeit aktualisieren
        vx = vx + ax * dt;
        vy = vy + ay * dt;

        // Position aktualisieren
        x = x + vx * dt;
        y = y + vy * dt;

        // Ausgabe der Position
        pfc.fstr("Step $: x=$, y=$").sa(i).sa(x).sa(y).pr();
    }

    return 1;
}
